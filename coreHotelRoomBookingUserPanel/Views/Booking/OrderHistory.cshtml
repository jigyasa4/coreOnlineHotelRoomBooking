@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "OrderHistory";
    Layout = "~/Views/Shared/_Basic.cshtml";
}


<!-- Home -->

<div class="home">
    <div class="background_image"><img src="~/images/booking.jpg" /></div>
    <div class="home_container">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="home_content text-center">
                        <div class="home_title">Your Booking History</div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div>

    <br />
    <br />
    <br />
    <br />
</div>


<div class="container">

    <table class="table table-hover table table-bordered">
        <thead>
            <tr>
                <th>
                    Booking Date
                </th>
                <th>
                    Total Amount
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.OHistory)
            {
                <tr>
                    <td>
                        @item.BookingDate
                    </td>
                    <td>
                        @item.TotalAmount
                    </td>
                    <td>
                        <div class="book_now_button"><a asp-controller="Booking" asp-action="historydetails" asp-route-id="@item.BookingId">Details</a></div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

