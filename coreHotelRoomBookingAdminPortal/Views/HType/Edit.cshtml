        <span asp-validation-for="HotelTypeName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="HotelTypeDescription">Hotel Type Description</label>
        <input type="text" asp-for="HotelTypeDescription" class="form-control" aria-describedby="emailHelp" placeholder="Enter Hotel Type Description" >
        <span asp-validation-for="HotelTypeName" class="text-danger"></span>
    </div>
    <button class="btn btn-info" type="submit">Edit</button>
    <br />
    <br />
    <a asp-controller="HType" asp-action="Index" class="btn btn-primary">Back to List</a>
</form>