@model IEnumerable<coreHotelRoomBookingAdminPortal.Models.HotelType>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<a asp-controller="HType" asp-action="Create"class="btn btn-primary">Insert Hotel Type</a>
<br />
<br />
<table class="table table-hover table table-bordered">
    <thead>
        <tr>
            <th>
                Hotel Type Id
            </th>
            <th>
                Hotel Type Name
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.HotelTypeId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HotelTypeName)
                </td>
                <td>
                    <a asp-controller="HType" asp-action="Details" asp-route-id="@item.HotelTypeId" class="btn btn-primary">Details</a>
                    <a asp-controller="HType" asp-action="Edit" asp-route-id="@item.HotelTypeId" class="btn btn-success">Edit</a>
                    <a asp-controller="HType" asp-action="Delete" asp-route-id="@item.HotelTypeId" class="btn btn-primary">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>